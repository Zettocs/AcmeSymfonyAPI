{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            margin-top: 70px;
            margin-bottom: 50px;
        }
        
        .table {
            background-color: #fff;
            border: 2px solid #aaa;
            border-radius : 10px;
        }
        
        .table th,
        .table td {
            border: 2px solid #aaa;
        }
        
        .btn-confirm {
            display: block;
            margin: 0 auto;
            margin-top: 10px;
        }


        h1 {
            margin-left: 20px;
        }

        .btn-primary {
            margin-left: 20px;
        }

    </style>
{% endblock %}

{% block body %}

<div class="container">
    <h1>Votre panier</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% if produits is not empty %}
                {% for index, produit in produits %}
                    <tr>
                        <td>{{ produit.nom }}</td>
                        <td>{{ produit.prix }} €</td>
                        <td><a href="{{ path('panier_supprimer', {'index': index}) }}" class="btn btn-danger">Supprimer</a></td>
                    </tr>
                {% endfor %}
                <tr>
                    <td>Total</td>
                    <td>{{ total }} €</td>
                    <td></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Votre panier est vide</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
    <a href="{{ path('valider_commande') }}" class="btn btn-primary">Confirmer la commande</a>
</div> 



{% endblock %}
